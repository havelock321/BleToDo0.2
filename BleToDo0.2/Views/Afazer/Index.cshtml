@model IEnumerable<BleToDo0._2.Models.Afazer>
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
   

        <!-- Accent-colored raised button with ripple -->
        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" name="novo" value="novo">
            Novo
        </button>

        <br/>
        <p>
            Pesquisar: @Html.TextBox("SearchFor")
            
            <button type="submit"  name="SearchFor" value="SearchFor" class="mdl-button mdl-js-button mdl-button--accent">
                Pesquisar
            </button>
        </p>


}

<table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--4dp">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.AFZ_DONE)</th>
            <th class="mdl-data-table__cell--non-numeric">@Html.DisplayNameFor(model => model.AFZ_DESCRICAO)</th>

            <th>@Html.DisplayNameFor(model => model.AFZ_CATEGORIA)</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td class="mdl-data-table__cell--non-numeric">@Html.DisplayFor(modelItem => item.AFZ_DONE)</td>
                <td>@Html.DisplayFor(modelItem => item.AFZ_TITULO)</td>
                <td>@Html.DisplayFor(modelItem => item.AFZ_CATEGORIA)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>

        }
    </tbody>
</table>
